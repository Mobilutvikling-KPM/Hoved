<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/topp"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/heading_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logg inn"
            android:textSize="40dp"
            android:layout_centerHorizontal="true"/>
        <EditText
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:id="@+id/brukernavn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Brukernavn"
            android:textColorHint="@color/grey"
            android:layout_below="@+id/heading_login"
            android:background="@drawable/custom_login_fields"/>
        <EditText
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:id="@+id/passord_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Passord"
            android:textColorHint="@color/grey"
            android:layout_below="@+id/brukernavn_login"
            android:background="@drawable/custom_login_fields"/>
        <LinearLayout
            android:id="@+id/toppen"
            android:layout_below="@id/passord_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_marginTop="15dp"
                android:id="@+id/cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/text_forbli_pålogget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forbli pålogget" />
        </LinearLayout>
            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/login_knapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log inn"
                android:layout_below="@+id/toppen"
                android:layout_centerHorizontal="true"/>
            <Button
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrer ny bruker"
                android:layout_below="@+id/login_knapp"
                android:layout_centerHorizontal="true"
                style="?android:attr/buttonBarButtonStyle" />
    </RelativeLayout>
    </LinearLayout>

</ScrollView>